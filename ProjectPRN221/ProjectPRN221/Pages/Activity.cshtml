@page
@model ProjectPRN221.Pages.ActivityModel
@{
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<head>
	<link rel="stylesheet" href="~/assets/css/styles.css" />
	<link href="~/libs/bootstrap/css/bootstrap.css" rel="stylesheet" />
	<link href="~/libs/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
	<div class="container">
		<div class="row head-title">
			<div class="col-md-8">
				<h1>
					<span>FPT University Academic Portal</span>
				</h1>
			</div>
			<div class="col-md-4 mobile-app-ads">
				<div>
					<span><strong>FAP mobile app (myFAP) is ready at</strong></span>
				</div>
				<div style="display: flex; justify-content: space-between">
					<div>
						<a href="https://apps.apple.com/app/id1527723314">
							<img src="https://fap.fpt.edu.vn/images/app-store.png" style="width: 120px; height: 40px" alt="apple store" />
						</a>
					</div>
					<div>
						<a href="https://play.google.com/store/apps/details?id=com.fuct">
							<img src="https://fap.fpt.edu.vn/images/play-store.png" style="width: 120px; height: 40px" alt="google store" />
						</a>
					</div>
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col-md-12">
				<header class="header-bar">
					<div class="header-left">
						<span><a href="#">Home</a></span>&nbsp;|&nbsp;
					</div>
					<div class="header-right">
						<span><a href="#">username</a></span>&nbsp;|&nbsp;
						<span><a href="#">logout</a></span>&nbsp;|&nbsp;
						<span><a href="#">CAMPUS: FPTU-Hòa Lạc</a></span>
					</div>
				</header>
			</div>
		</div>
		<div class="row" style="margin-top: 1em">
			<div class="col-md-12">
				<div style="display: flex; justify-content: center">
					<form>
						Search:
						<input type="text" />
						From:
						<input type="date" />
						<input type="submit" value="Search" />
					</form>
				</div>
				<div class="activity-table">
					<table class="table table-bordered table-hover">
						<thead>
							<form>
								<div class="center activity-search-bar">
									<div>
										CAMPUS:
										<select>
											<option>FU-HL</option>
											<option>FU-DA</option>
										</select>
										AREA:
										<select asp-for="AreaId" name="AreaId">
											<option value="-1">- Select one -</option>
											@if (Model.Areas != null)
											{
												foreach (var item in Model.Areas)
												{
													<option value="@item.AreaId">@item.AreaName</option>
												}
											}
										</select>
										DATE:
										<input type="date" />
										<input type="submit" value="View" />
									</div>
								</div>
							</form>
						</thead>
						<tbody>
							<tr class="table-primary">
								<th>ROOM<br />(CAPACITY)</th>
								@foreach (var item in Model.TimeSlots)
								{
									<th>@item.TimeslotName<br />( @item.TimeslotDescription )</th>
								}
							</tr>
							<tr>
								<td>data</td>
								<td>data</td>
								<td>data</td>
								<td>data</td>
								<td>data</td>
								<td>data</td>
								<td>data</td>
							</tr>
							<tr>
								<td>data</td>
								<td>data</td>
								<td>data</td>
								<td>data</td>
								<td>data</td>
								<td>data</td>
								<td>data</td>
							</tr>
							<tr>
								<td>data</td>
								<td>data</td>
								<td>data</td>
								<td>data</td>
								<td>data</td>
								<td>data</td>
								<td>data</td>
							</tr>

						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
</body>